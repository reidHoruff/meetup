<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SETTINGS"
        android:id="@+id/settingsTitle"
        android:layout_gravity="center_horizontal"
        android:textColor="#00c78c"
        android:textStyle="bold"
        android:textSize="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="LOG OUT"
        android:id="@+id/se_logout_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="#00c78c"
        android:textColor="#FFFFFF"
        android:onClick="logoutButtonClicked" />
        
         <TextView
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to Meetup!

 Swipe screen to edit/view interests. Swipe again to view your matches.

 You'll be meeting up with cool similar people in no time!"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_weight="0.43" />

</LinearLayout>
